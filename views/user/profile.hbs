<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>My Profile</h1>
        <hr>
        <h2>My Orders</h2>
        {{#each orders}}
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                        {{# each this.items }}
                            <li class="list-group-item">
                                <span class="badge">{{this.price}}</span>
                                {{this.item.title}} | {{this.qty}} item(s)
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer">
                    <strong>Total Price: Ksh {{this.cart.totalPrice}}</strong>
                </div>
            </div>
        {{/each}}
    </div>
</div>
